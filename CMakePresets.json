{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "displayName": "Base",
            "description": "Sets generator, build, toolchain and install directory",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}"
        },
        {
            "name": "windows",
            "displayName": "windows",
            "description": "Setup x64 window.",
            "inherits": [ "base" ],
            "architecture":{
                "strategy": "external",
                "value": "x64"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl",
                "ENABLE_UNIT_TESTING" : "ON",
                "ENABLE_PERFORMACE_TESTING" : "ON",
                "C_STANDARD": "11",
                "CXX_STANDARD": "14",
                "MSVC_TOOLSET_VERSION": "143"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Windows" ]
                  }
            }
        },
        {
            "name": "linux",
            "displayName": "linux",
            "description": "Setup x64 linux.",
            "inherits": [ "base" ],
            "architecture":{
                "strategy": "external",
                "value": "x64"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CAMKE_C_COMPILER" : "clang",
                "ENABLE_UNIT_TESTING" : "ON",
                "ENABLE_PERFORMACE_TESTING" : "ON",
                "C_STANDARD": "11",
                "CXX_STANDARD": "14"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Linux" ]
                  }
            }
        },
        {
            "name": "x64-win-debug",
            "displayName": "x64-win-debug",
            "description": "x64 windows debug",
            "inherits": [ "windows" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-win-release",
            "displayName": "x64-win-release",
            "description": "Windows x64 Release Build",
            "inherits": [ "windows" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x64-linux-debug",
            "displayName": "x64-linux-debug",
            "description": "x64 Linux Debug",
            "inherits": [ "linux" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-linux-release",
            "displayName": "x64-linux-release",
            "description": "x64 Linux Release",
            "inherits": [ "linux" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "core-build",
            "description": "Inherits from env from base configuration.",
            "configurePreset": "base",
            "hidden": true
        },
        {
            "name": "clean-build",
            "description": "Clean build",
            "configurePreset": "core-build",
            "hidden": true,
            "cleanFirst": true
        },
        {
            "name": "verbose-build",
            "description": "Clean build with verbose output.",
            "configurePreset": "core-build",
            "hidden": true,
            "verbose": true,
            "cleanFirst": true
        },
        {
            "name": "x64-win-debug",
            "description": "Windows x64 Debug build.",
            "configurePreset": "x64-win-debug",
            "inherits":"verbose-build"
        },
        {
            "name": "x64-win-release",
            "description": "Windows x64 Release build.",
            "configurePreset": "x64-win-release",
            "inherits":"clean-build"
        },
        {
            "name": "x64-linux-debug",
            "description": "Linux x64 Debug build.",
            "configurePreset": "x64-linux-debug",
            "inherits":"clean-build"
        },
        {
            "name": "x64-linux-release",
            "description": "Linux x64 Release build.",
            "configurePreset": "x64-linux-release",
            "inherits":"clean-build"
        }
    ],
    "testPresets": [
        {
            "name": "default-win32",
            "configurePreset": "x64-win-release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error", 
                "stopOnFailure": true
            }
        },
        {
            "name": "default-linux",
            "configurePreset": "x64-linux-release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error", 
                "stopOnFailure": true
            }
        }
    ]
}